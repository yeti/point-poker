{
  "name": "point-poker",
  "version": "1.1.0",
  "description": "Point poker using sockets",
  "engines": {
    "node": "8.1.2",
    "npm": "5.0.4"
  },
  "scripts": {
    "dev": "NODE_ENV=dev node index",
    "prebuild": "npm run checks",
    "build": "NODE_ENV=production webpack --config webpack.production.config.js --progress --profile --colors",
    "postinstall": "npm run build",
    "start": "NODE_ENV=production node index",
    "lint:server": "eslint index.js lib/**/*.js -c ./.eslintrc-server.js",
    "lint:client": "eslint src/**/*.js -c ./.eslintrc",
    "test": "npm run test:server && npm run test:client",
    "test:server": "mocha",
    "test:client": "jest",
    "checks": "npm run lint:server && npm test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^3.5.0",
    "classwrap": "^1.0.2",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.7",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-react": "^6.10.3",
    "express": "^4.15.2",
    "express-force-https": "^1.0.0",
    "express-static-gzip": "^0.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "inherits": "^2.0.3",
    "jest": "^20.0.4",
    "lodash": "^4.17.4",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.3",
    "npm-watch": "^0.2.0",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss-loader": "^2.0.6",
    "prettyjson": "^1.2.1",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-addons-css-transition-group": "^15.5.2",
    "react-copy-to-clipboard": "^5.0.0",
    "react-dom": "^16.0.0",
    "react-dropdown": "^1.2.3",
    "react-feather": "^1.0.7",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-router": "^3.0.0",
    "react-router-dom": "^4.0.0",
    "react-router-transition": "0.0.6",
    "react-test-renderer": "^15.6.1",
    "react-tooltip": "^3.3.0",
    "sass-loader": "^6.0.6",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "starwars-names": "^1.6.0",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "/src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "**/src/**/*.spec.js?(x)"
    ]
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.10",
    "@storybook/react": "^3.2.8",
    "compression-webpack-plugin": "^1.0.0",
    "enzyme": "^2.9.1",
    "enzyme-adapter-react-16": "^1.0.0",
    "react-addons-test-utils": "^15.6.2",
    "webpack-bundle-analyzer": "^2.9.0"
  },
  "false": {}
}
